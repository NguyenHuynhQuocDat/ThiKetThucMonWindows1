        <Button x:Name="btn_tinh" Content="Tính" HorizontalAlignment="Left" Height="39" Margin="471,117,0,0" VerticalAlignment="Top" Width="103" Click="Btn_tinh_Click"/>
        <Button x:Name="btn_kt" Content="Kết thúc" HorizontalAlignment="Left" Margin="471,178,0,0" VerticalAlignment="Top" Width="103" Click="Btn_kt_Click" Height="39"/>
        <Label x:Name="label_Copy" Content="Giá trị 2:" HorizontalAlignment="Left" Margin="91,117,0,0" VerticalAlignment="Top"/>
        <Label Content="Toán tử" HorizontalAlignment="Left" Margin="259,61,0,0" VerticalAlignment="Top" Width="67"/>

    </Grid>
</Window>
